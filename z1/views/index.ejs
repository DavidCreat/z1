    <script>
        document.addEventListener("DOMContentLoaded", async function () {
            // Hacer una solicitud al servidor para obtener el zapato más reciente
            try {
                const response = await fetch('/api/zapato-mas-reciente');
                const data = await response.json();
    
                // Crear un nuevo elemento de producto con los datos obtenidos
                const productosSection = document.getElementById('productosSection');
                const productoElement = document.createElement('article');
                productoElement.classList.add('producto');
                productoElement.innerHTML = `
                    <img src="${data.imagen}" alt="${data.nombre}">
                    <h2>${data.nombre}</h2>
                    <p>${data.descripcion}</p>
                    <span>${data.precio}</span>
                    <button>Contactar por WHATSAPP</button>
                `;
    
                // Agregar el nuevo elemento al contenedor de productos
                productosSection.appendChild(productoElement);
            } catch (error) {
                console.error('Error al obtener el zapato más reciente:', error);
            }
        });
    </script>>

